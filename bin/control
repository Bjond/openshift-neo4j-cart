#!/bin/bash -e

# Ensure arguments.
if ! [ $# -eq 1 ]; then
    echo "Usage: $0 [start|restart|graceful|graceful-stop|stop|status]"
    exit 1
fi

# Source utility functions.
source $OPENSHIFT_CARTRIDGE_SDK_BASH

function build() {
    echo 
}

function deploy() {
    echo
}

function start() {
    echo "starting..."
    $OPENSHIFT_NEO4J_DIR/versions/2.0.1/bin/neo4j start
    #&>> $OPENSHIFT_NEO4J_DIR/versions/2.0.1/console.log
}

function stop() {
    echo "Stopping..."
    $OPENSHIFT_NEO4J_DIR/versions/2.0.1/bin/neo4j stop &>> $OPENSHIFT_NEO4J_DIR/versions/2.0.1/console.log

}

function restart() {
    echo "Restarting..."
    $OPENSHIFT_NEO4J_DIR/versions/2.0.1/bin/neo4j restart &>> $OPENSHIFT_NEO4J_DIR/versions/2.0.1/console.log

}

function status() {
    echo "Status..."
    $OPENSHIFT_NEO4J_DIR/versions/2.0.1/bin/neo4j status &>> $OPENSHIFT_NEO4J_DIR/versions/2.0.1/console.log

}


function reload() {
    echo
}

function tidy() {
    echo
}

function threaddump() {
    echo
}

function pre_restore() {
    echo
}

#
#  main():
#


case "$1" in
  build)           build ;;
  deploy)          deploy ;;
  pre-restore)     pre_restore ;;
  start)           start ;;
  stop)            stop ;;
  restart)         restart ;;
  status)          status ;;
  reload)          reload ;;
  tidy)            tidy ;;
  threaddump)      threaddump ;;
  update-configuration) update-configuration;;
  *)               exit 0
esac
